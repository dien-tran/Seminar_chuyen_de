@using Contoso.BlazorApp.Models

<div class="flex flex-col gap-4 mt-4">
    @foreach (var comment in Comments)
    {
        <div class="bg-gray-100 rounded-lg p-4">
            <div class="text-base font-medium text-gray-800">@comment.Username</div>
            <div class="text-sm text-gray-700 mt-1">@comment.Content</div>
            <div class="text-xs text-gray-500 mt-2">
                @(DateTime.TryParse(comment.CreatedAt, out var date) ? date.ToString("g") : comment.CreatedAt)
            </div>
        </div>
    }
    
    @if (!Comments.Any())
    {
        <div class="text-gray-500 text-center py-4">
            No comments yet. Be the first to comment!
        </div>
    }
</div>

@code {
    [Parameter] public List<Comment> Comments { get; set; } = new();
}